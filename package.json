{
  "name": "litt31",
  "version": "0.0.1",
  "description": "Automation Engineering",
  "license": "MIT",
  "scripts": {
    "dev": "run-p server watch",
    "deploy": "run-s build:prod release",
    "prehtml": "js-yaml src/content.yml > dist/content.json",
    "html": "pug -O dist/content.json -P src/index.pug -o dist",
    "posthtml": "rimraf dist/content.json",
    "css": "stylus src/css/index.styl -p | postcss -o dist/css/style.css --config conf",
    "js:dev": "browserify src/js/main/* -o dist/js/main.js -d -t [ babelify --presets [ @babel/preset-env ] ]",
    "js:prod": "browserify src/js/main/* -o dist/js/main.js -t [ babelify --presets [ @babel/preset-env ] ]",
    "js:vendor": "browserify src/js/vendor/*.js -o dist/js/vendor.js",
    "clean": "rimraf dist",
    "mkdirs": "mkdirp dist/assets dist/js dist/css",
    "copy:assets": "cpr src/assets dist/assets",
    "prebuild:dev": "run-s clean mkdirs copy:*",
    "build:dev": "run-p html css js:dev js:vendor",
    "prebuild:prod": "run-s clean mkdirs copy:*",
    "build:prod": "cross-env NODE_ENV=prod run-p html css js:prod js:vendor",
    "postbuild:prod": "npm run hash",
    "hash": "hashmark **/{main,vendor,style}.* -d md5 -l 8 --cwd dist '{dir}/{name}.{hash}{ext}' | replaceinfiles -S -s dist/*.html",
    "posthash": "rimraf dist/js/main.js dist/js/vendor.js dist/css/style.css",
    "release": "gh-pages -d dist -b live -m 'release updates' --no-history",
    "preserver": "npm run build:dev",
    "server": "browser-sync start --server -f dist --ss dist --port 8080 --no-open --no-ui",
    "watch:assets": "onchange 'src/assets/**/*' -- npm run copy:assets",
    "watch:html": "onchange 'src/**/*.pug' 'src/**/*.yml' -- npm run html",
    "watch:css": "onchange 'src/**/*.styl' -- npm run css",
    "watch:js": "onchange 'src/**/*.js' -- npm run js:dev",
    "watch:vendor": "onchange 'src/vendor/**/*.js' -- npm run js:vendor",
    "watch": "run-p watch:*"
  },
  "dependencies": {
    "rellax": "^1.12.1",
    "aos": "^2.3.4",
    "snapsvg": "^0.5.1",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "autoprefixer": "^10.1.0",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.13",
    "browserify": "^17.0.0",
    "cpr": "^3.0.1",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "gh-pages": "^3.1.0",
    "hashmark": "^5.0.0",
    "js-yaml": "^3.14.1",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "replaceinfiles": "^1.1.4",
    "rimraf": "^3.0.2",
    "stylus": "^0.54.8"
  }
}
