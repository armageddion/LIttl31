doctype html

head
  meta(charset='utf-8')
  title #{meta.title}
  meta(name='description' content=meta.description)
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='css/style.css')
  link(rel="icon" type="image/png" href='assets/images/favicon.ico')
  script(src='js/main.js', defer)

body.text-white
  main(data-scroll-container)

    section#splash.h-screen.flex.flex-col.items-center.justify-center(data-scroll-section)
      div(
        data-scroll,
        data-scroll-repeat,
        data-scroll-speed='-3',
        data-scroll-position='top',
      )
        svg.logo.-mt-32
      div(
        data-scroll,
        data-scroll-repeat,
        data-scroll-speed='-2',
        data-scroll-position='top',
      )
        a(href='#intro')
          h1.text-5xl.font-bold.text-yellow-500(data-scramble-title) &nbsp;

    section#intro.p-8.flex.items-center.justify-center(data-scroll-section)
      .max-w-screen-lg.w-full
        h2.text-7xl.font-bold.text-yellow-500.text-right(
          href='#intro',
          data-scramble-intro,
          data-scroll,
          data-scroll-repeat,
          data-scroll-speed='3',
          data-scroll-position='top',
          data-scroll-direction='horizontal'
        ) #{intro.title}
        .w-full.mt-32.flex.justify-end
          div.max-w-xl.space-y-8(data-scroll)
            for line, i in intro.lines
              p.opacity-0.transition-opacity.delay-100.duration-700(
                data-scroll,
                data-scroll-repeat,
                data-scroll-class='opacity-100'
              ) #{line}

    section#projects(data-scroll-section)
      for project in projects
        .flex.items-center.justify-center.p-8.bg-center.bg-cover(
          id=project.id,
          style=`background-image: url(${project.background})`
        )
          .max-w-screen-lg.w-full
            h2.text-7xl.font-bold.text-yellow-500(
              data-scramble-project=project.title,
              data-scroll,
              data-scroll-repeat,
              data-scroll-speed='-1',
              data-scroll-position='top',
              data-scroll-direction='horizontal',
              data-scroll-target=`#${project.id}`
            )
              - var href = `#${project.id}`
              | #{project.title}
            hr.my-4.border-t-4.border-yellow-500

            if project.right
              if project.img
                .w-full.mt-16.flex.justify-start
                  .border-4.border-yellow-500.bg-yellow-500(class='w-1/2')
                    img.mx-auto.opacity-90.w-full(src=project.img)
              if project.vid
                .w-full.mt-16.flex.justify-start
                  .border-4.border-yellow-500.bg-yellow-500(class='w-1/2')
                    video.autoplay.mx-auto.opacity-90.w-full(autoplay loop)
                      source(src=project.vid type="video/mp4")
            else
              if project.img
                .w-full.mt-16.flex.justify-end
                  .border-4.border-yellow-500.bg-yellow-500(class='w-1/2')
                    img.mx-auto.opacity-90.w-full(src=project.img)
              if project.vid
                .w-full.mt-16.flex.justify-end
                  .border-4.border-yellow-500.bg-yellow-500(class='w-1/2')
                    video.autoplay.mx-auto.opacity-90.w-full(autoplay loop)
                      source(src=project.vid type="video/mp4")

            if project.right
              .w-full.mt-8.flex.justify-end
                .max-w-md.space-y-8
                  for line in project.lines
                    p.opacity-0.transition-opacity.delay-100.duration-700(
                      data-scroll,
                      data-scroll-repeat,
                      data-scroll-class='opacity-100'
                    )= line
            else
              .w-full.mt-8.flex.justify-start
                .max-w-md.space-y-8
                  for line in project.lines
                    p.opacity-0.transition-opacity.delay-100.duration-700(
                      data-scroll,
                      data-scroll-repeat,
                      data-scroll-class='opacity-100'
                    )= line

    footer.container.mx-auto.py-8.px-4.text-white(data-scroll-section)
      .max-w-screen-lg.mx-auto.flex.flex-col
        .flex.items-center.w-full
          div(class='w-1/3')
          div(class='w-1/3')
            //- div(
            //-   //- data-scroll,
            //-   //- data-scroll-repeat,
            //-   //- data-scroll-position='bottom',
            //-   //- data-scroll-speed='-2'
            //- )
            img.mx-auto.w-24(src='assets/images/logo.svg')
          div.text-right(class='w-1/3')
            div(
              data-scroll,
              data-scroll-repeat,
              data-scroll-position='top',
              data-scroll-speed='-1'
            )
            - var mail = `${footer.email}`
            a.cursor-pointer.text-5xl.font-bold.text-yellow-500(
              href="mailto:"+mail,
              data-scramble-contact
            ) Contact
        p.text-center.text-sm.mt-4.px-8(
          data-scroll,
          data-scroll-repeat,
          data-scroll-speed='0.5'
        ) #{footer.text}
