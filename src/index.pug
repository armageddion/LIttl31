doctype html

head
  meta(charset='utf-8')
  title #{meta.title}
  meta(name='description' content=meta.description)
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='css/style.css')
  script(src='js/main.js', defer)

body.text-white
  main.min-h-screen

    section#splash.flex.flex-col.items-center.justify-center
      .rellax(data-rellax-speed='-2' data-rellax-percentage='.5')
        svg.logo.-mt-32
      .rellax(data-rellax-speed='-2.5' data-rellax-percentage='.5')
        a(href='#intro')
          h1.scramble.text-5xl.font-bold.text-yellow-500 &nbsp;

    section#intro.p-8.flex.items-center.justify-center
      .max-w-screen-lg.w-full
        h2.scramble.text-7xl.font-bold.text-yellow-500.rellax(data-rellax-speed='-1.2' data-rellax-percentage='.5')
          a(href='#intro') #{intro.title}
        .w-full.mt-32.flex.justify-end
          div.max-w-xl.space-y-8
            for line, i in intro.lines
              p.rellax(data-rellax-speed=((i * 0.2) + 0.1)) #{line}

    section#projects
      for project in projects
        .rellax-container.flex.items-center.justify-center.mt-4.p-8.bg-center.bg-cover(
          id=project.id,
          style=`background-image: url(${project.background})`
        )
          .max-w-screen-lg.w-full(
            data-aos='fade-up'
            data-aos-offset='500'
            data-aos-anchor-placement='top-bottom'
          )
            h2.scramble.text-7xl.font-bold.text-yellow-500.rellax(data-rellax-speed='-1' data-rellax-percentage='.3')
              - var href = `#${project.id}`
              a(href=href) #{project.title}
            hr.my-4.border-t-4.border-yellow-500.rellax(data-rellax-speed='-0.5' data-rellax-percentage='-0.3')

            if project.right
              if project.img    
                .w-full.mt-16.flex.justify-start.rellax(data-rellax-speed='2' data-rellax-percentage='0.8')          
                  .border-4.border-yellow-500.bg-yellow-500(class='w-1/2')
                    img.mx-auto.opacity-90.w-full(src=project.img)
              if project.vid              
                .w-full.mt-16.flex.justify-start.rellax(data-rellax-speed='2' data-rellax-percentage='0.8')
                  .border-4.border-yellow-500.bg-yellow-500(class='w-1/2')
                    video.autoplay.mx-auto.opacity-90.w-full(autoplay loop)
                      source(src=project.vid type="video/mp4")                  
            else
              if project.img
                .w-full.mt-16.flex.justify-end.rellax(data-rellax-speed='2' data-rellax-percentage='0.8')
                  .border-4.border-yellow-500.bg-yellow-500(class='w-1/2')
                    img.mx-auto.opacity-90.w-full(src=project.img)
              if project.vid
                .w-full.mt-16.flex.justify-end.rellax(data-rellax-speed='2' data-rellax-percentage='0.8')              
                  .border-4.border-yellow-500.bg-yellow-500(class='w-1/2')
                    video.autoplay.mx-auto.opacity-90.w-full(autoplay loop)
                      source(src=project.vid type="video/mp4") 

            if project.right
              .w-full.mt-8.flex.justify-end
                .max-w-md.space-y-8.rellax(data-rellax-speed='3' data-rellax-percentage='-0.5')
                  for line in project.lines
                    p= line
            else
              .w-full.mt-8.flex.justify-start
                .max-w-md.space-y-8.rellax(data-rellax-speed='3' data-rellax-percentage='-0.5')
                  for line in project.lines
                    p= line

    footer.container.mx-auto.mt-32.py-8.px-4.text-white
      .max-w-screen-lg.mx-auto.flex.flex-col
        .flex.items-center.w-full
          div(class='w-1/3')
          div(class='w-1/3')
            .rellax(data-rellax-speed='-2' data-rellax-percentage='.5')
              img.mx-auto.w-24(src='assets/images/logo.svg')
          div.text-right(class='w-1/3')
            .rellax(data-rellax-speed='-5', data-rellax-percentage='.35')
              a.cursor-pointer.text-5xl.font-bold.text-yellow-500 Contact
        p.text-center.text-sm.mt-16.px-8.
          #{footer.text}
